---
// Main layout for documentation pages
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "根据Obsidian官方开发者文档进行翻译" } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title} - Obsidian 开发者文档</title>
    <style>
      /* Basic styling to match VitePress theme */
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #2c3e50;
        margin: 0;
        padding: 0;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 40px;
      }
      
      .sidebar {
        position: sticky;
        top: 20px;
        height: fit-content;
        border-right: 1px solid #e2e8f0;
        padding-right: 20px;
      }
      
      .content {
        max-width: none;
      }
      
      h1, h2, h3, h4, h5, h6 {
        color: #2c3e50;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
      }
      
      h1 {
        border-bottom: 2px solid #eaecef;
        padding-bottom: 0.3em;
      }
      
      code {
        background-color: #f6f8fa;
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-size: 0.85em;
      }
      
      pre {
        background-color: #f6f8fa;
        padding: 1em;
        border-radius: 6px;
        overflow-x: auto;
      }
      
      .site-header {
        background: #fff;
        border-bottom: 1px solid #e2e8f0;
        padding: 1rem 0;
        margin-bottom: 2rem;
      }
      
      .site-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
        text-decoration: none;
      }
      
      @media (max-width: 768px) {
        .container {
          grid-template-columns: 1fr;
          gap: 20px;
        }
        
        .sidebar {
          border-right: none;
          border-bottom: 1px solid #e2e8f0;
          padding-right: 0;
          padding-bottom: 20px;
        }
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a href="/" class="site-title">Obsidian 开发者文档</a>
      </div>
    </header>
    
    <div class="container">
      <aside class="sidebar">
        <slot name="sidebar" />
      </aside>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>