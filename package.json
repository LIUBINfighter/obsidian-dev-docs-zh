{
  "name": "obsidian-dev-docs-zh",
  "version": "1.0.0",
  "type": "module",
  "description": "Obsidian 开发者文档中文版",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "// 主要命令": "",
    "dev": "pnpm sync:all && pnpm lint:fix && astro dev",
    "build": "pnpm sync:all && pnpm lint:fix && astro build",
    "build:timer": "node scripts/build-with-timer.js",
    "preview": "astro preview",
    "// Astro 服务": "",
    "astro:dev": "astro dev",
    "astro:build": "astro build",
    "astro:preview": "astro preview",
    "// 代码质量": "",
    "lint": "eslint . --ext .js,.ts,.vue",
    "lint:fix": "eslint . --ext .js,.ts,.vue --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "pnpm lint:fix && pnpm format",
    "// Git 子模块管理": "",
    "submodule:status": "git submodule status",
    "submodule:update": "git submodule update --remote docs/en/official-develop-docs",
    "submodule:pull": "cd docs/en/official-develop-docs && git pull origin main",
    "submodule:sync": "pnpm submodule:update && pnpm sync:all",
    "// CI/CD 相关": "",
    "ci:check": "pnpm lint && pnpm format:check",
    "ci:build": "pnpm sync:all && pnpm ci:check && pnpm astro:build",
    "// API 文档同步": "",
    "sync:official": "node scripts/syncOfficialApiDocs-simple.js",
    "sync:typings": "node scripts/syncTypingsApiDocs.js",
    "sync:all": "pnpm sync:official && pnpm sync:typings",
    "sync:status": "node -e \"Promise.all([import('./scripts/generateOfficialApiSidebar.js'), import('./scripts/generateApiSidebar.js')]).then(([m1, m2]) => console.log('📊 同步状态:\\n  官方 API:', m1.officialApiSidebar.length, '个分组\\n  Typings API:', m2.apiReferenceSidebar.length, '个分组'))\"",
    "// 翻译相关": "",
    "translate:check": "git diff --name-only docs/en/official-develop-docs/",
    "translate:status": "echo '检查翻译状态...' && pnpm translate:check | wc -l && echo '个文件需要翻译更新'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@astrojs/starlight": "^0.35.2",
    "@astrojs/tailwind": "^6.0.2",
    "@eslint/js": "^9.34.0",
    "@microsoft/api-documenter": "^7.26.32",
    "@microsoft/api-extractor": "^7.52.11",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "astro": "^5.13.5",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "obsidian-typings": "^4.47.0",
    "prettier": "^3.6.2"
  }
}
